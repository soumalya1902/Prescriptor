<style type="text/css">
    html,
    body {
        font-family: Cambria, Cochin, Georgia, Times, "Times New Roman", serif;
    }

    hr.new {
        border: 1px solid #037a35;
    }

    .center12 {
        width: 1000px;
        margin-left: auto;
        margin-right: auto;
        height: auto;
        padding: 60px;
    }

    hr.add {
        background-color: rgb(0, 0, 0);
        width: 100%;
        height: 1px;
        border-top: 1px solid black;
    }

    .column {
        padding: 10px;
        width: 50%;
        float: left;
        height: auto;
        /* Should be removed. Only for demonstration */
    }

    .left {
        width: 65%;
        float: left;
    }

    .right {
        width: 35%;
        float: left;
    }

    .row:after {
        content: "";
        display: table;
        clear: both;
    }

    table,
    th,
    td {
        border: 2px solid black;
        border-collapse: collapse;
    }

    th,
    td {
        padding: 15px;
    }
</style>


<html>

<body>

    <div id="content" class="center12">

        <h2>Medical Prescription</h2>

        <h4 style="position: right;">{{meta.date}}</h4>
        <h4 style="position: right;">{{meta.time}}</h4>

        <hr class="new" />

        <h1>{{doctor.hosname}}</h1>
        <h2>{{doctor.name}}</h2>
        <h5>Doctor ID: {{doctor.id}}</h5>
        <h5>Address: {{doctor.address}}</h5>
        <h5>Contact Number: {{doctor.number}}</h5>
        <hr class="new" />
        <br />
        <!-- <p id="date"></p>
      <p id="time"></p> -->
        <div class="row">
            <div class="column">
                <h5>{{metaData.date}}</h5>
                <h5>{{metaData.time}}</h5>
            </div>
            <div class="column">
                <h4>Patient Information:</h4>
                <h5>Firstname: {{info.firstname}} </h5>
                <h5>Lastname: {{info.lastname}}</h5>
                <h5>Age: {{info.age}} </h5>
                <h5>Gender: {{info.gender}} </h5>

            </div>

        </div>
        <hr class="new" />
        <br />

        <div id="dia">
            <h4>Symptoms: {{diagnosis.symptoms}}</h4>
            <h4>Diseases: {{diagnosis.diagnosis}}</h4>
        </div>
        <br />

        <div id="med">
            <h4>Medcine Prescribed:</h4>
            <table class="thb" style="width:80%; margin-top: 13px;" align="center">
                <tr>
                    <th>Medicine Name</th>
                    <th>Dosage</th>
                    <th>Duration</th>
                </tr>
                <!-- <tr>
            <td>Jill</td>
            <td>Smith</td>
            <td>50</td>
          </tr> -->
                {{#each medicine}}
                <tr>
                    <td>{{name}}</td>
                    <td>{{dosage}}</td>
                    <td>{{duration}}</td>
                </tr>
                {{/each}}
            </table>
        </div>
        <br />

        <h4>Advice/Instructions:</h4>
        <p>{{advice}}</p>
        <br />
        <br />
        <h4>Signature</h4>
    </div>

</html>